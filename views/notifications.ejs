<% layout("/layouts/boilerplate.ejs") %>

<div class="notifications container mt-4">
    <h2 class="text-center mb-4">Subscription Ending Today</h2>
  
    <% if (todaysCustomers.length > 0) { %>
      <% todaysCustomers.forEach((customer) => { %>
        <div class="customer-card p-3 mb-3 rounded shadow-sm d-flex flex-wrap align-items-center" style="border: 1px solid #ddd;">
          <div class="customer-image me-3" style="flex: 0 0 100px; height: 100px; overflow: hidden; border-radius: 50%;">
            <img 
              src="<%= customer.customerImage.url %>" 
              alt="Customer Image" 
              class="img-fluid w-100 h-100 object-fit-cover" 
              style="border-radius: 50%;"
            />
          </div>
          <div class="customer-details" style="flex: 1;">
            <p class="mb-1">
              <span class="fw-bold me-2">
                <i class="bi bi-person-circle"></i> Name:
              </span> 
              <%= customer.name %>
            </p>
            <p class="mb-1">
              <span class="fw-bold me-2">
                <i class="bi bi-currency-rupee"></i> Fees Paid:
              </span>₹<%= customer.feesPaid %>
            </p>
            <p class="mb-1">
              <span class="fw-bold me-2">
                <i class="bi bi-currency-rupee"></i> Fees Remaining:
              </span>₹<%= 2300 - customer.feesPaid %>
            </p>
            <p class="mb-1">
              <span class="fw-bold me-2">
                <i class="bi bi-telephone-fill"></i> Mobile:
              </span>
              <%= customer.mobile || "N/A" %>
            </p>
            <p class="mb-1" style="color: green; font-weight: bold;">
              <span class="fw-bold me-2">
                <i class="bi bi-calendar-event-fill" style="color: green;"></i> Month Ended Yesterday
              </span>

            </p>
          </div>
        </div>
      <% }); %>
    <% } else { %>
      <p class="text-center">No customers Subscription Ending today.</p>
    <% } %>
  </div>
  