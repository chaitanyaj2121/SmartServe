<% layout("/layouts/boilerplate.ejs") %>
<style>
  .container {
    margin-top: 30px;
  }

  .add-customer-btn {
    margin-bottom: 20px;
  }

  .modal-dialog {
  display: flex;
  align-items: center;
  justify-content: center;
  min-height: 100vh; /* Full viewport height */
  margin: 0 auto; /* Center the modal horizontally */
}

/* Adjust modal content for responsiveness */
.modal-content {
  width: 100%;
  max-width: 500px; /* Limit the max width */
  border-radius: 8px;
  padding: 20px;
  box-shadow: 0 4px 8px rgba(0, 0, 0, 0.1); /* Subtle shadow for depth */
  background-color: #fff;
}

/* Fix for smaller screens */
@media (max-width: 768px) {
  .modal-content {
    width: 90%; /* Ensure it fits well on mobile devices */
  }
}

/* Optional: Add a smooth fade-in effect */
.modal.fade .modal-dialog {
  transition: transform 0.3s ease-in-out, opacity 0.3s ease-in-out;
  transform: translateY(-50px);
  opacity: 0;
}

.modal.show .modal-dialog {
  transform: translateY(0);
  opacity: 1;
}
  .customer-card {
    background-color: #fff;
    border-radius: 8px;
    box-shadow: 0 4px 6px rgba(0, 0, 0, 0.1);
    padding: 20px;
    margin-bottom: 20px;
    display: flex;
    align-items: center;
    gap: 15px;
    flex-wrap: wrap;
  }

  .customer-image {
    width: 80px;
    height: 80px;
    border-radius: 50%;
    object-fit: cover;
    background-color: #f8f8f8;
  }

  .customer-details {
    flex-grow: 1;
  }

  .customer-detail-title {
    font-weight: bold;
    color: #6c757d;
  }

  .customer-detail-value {
    font-size: 1rem;
    margin-bottom: 5px;
  }

  .action-buttons {
    display: flex;
    flex-direction: column;
    gap: 10px;
  }

  @media (max-width: 768px) {
    .customer-card {
      flex-direction: column;
      align-items: flex-start;
    }

    .action-buttons {
      flex-direction: row;
      gap: 15px;
      justify-content: space-between;
      width: 100%;
    }
  }
</style>

<div class="container">
  <h1 class="text-center mb-4">Manage Customers</h1>

  <!-- Add Customer Button -->
  <div class="text-end">
    <button class="btn btn-primary add-customer-btn" data-bs-toggle="modal" data-bs-target="#addCustomerModal">
      <i class="fas fa-user-plus"></i> Add Customer
    </button>
  </div>

  <!-- Add Customer Modal -->
  <div class="modal fade" id="addCustomerModal" tabindex="-1" aria-labelledby="addCustomerModalLabel" aria-hidden="true">
    <div class="modal-dialog">
      <div class="modal-content">
        <div class="modal-header">
          <h5 class="modal-title" id="addCustomerModalLabel">Add New Customer</h5>
          <button type="button" class="btn-close" data-bs-dismiss="modal" aria-label="Close"></button>
        </div>
        <form action="/customers/add" method="POST" enctype="multipart/form-data">
          <div class="modal-body">
            <div class="mb-3">
              <label for="name" class="form-label">Customer Name</label>
              <input type="text" class="form-control" id="name" name="name" required>
            </div>
            <div class="mb-3">
              <label for="customerImage" class="form-label">Customer Image</label>
              <input type="file" class="form-control" id="customerImage" name="customerImage" accept="image/*" required>
              <div class="form-text">Please upload a valid image file (e.g., .jpg, .png).</div>
            </div>
            <div class="mb-3">
              <label for="mobile" class="form-label">Mobile</label>
              <input type="tel" class="form-control" id="mobile" name="mobile">
            </div>
            <div class="mb-3">
              <label for="start_date" class="form-label">Starting Date</label>
              <input type="date" class="form-control" id="start_date" name="start_date" required>
            </div>
            <div class="mb-3">
              <label for="fees_paid" class="form-label">Fees Paid</label>
              <input type="number" class="form-control" id="feesPaid" name="feesPaid" placeholder="Enter amount">
            </div>
          </div>
          <div class="modal-footer">
            <button type="submit" class="btn btn-primary">Add Customer</button>
          </div>
        </form>
      </div>
    </div>
  </div>

  <!-- Customer Cards -->
  <div class="mt-4">
    <% if (customers.length > 0) { %>
      <% customers.forEach((customer, index) => { %>
        <div class="customer-card">
          <img
            src="<%= customer.customerImage.url  || '/default-avatar.png' %>"
            alt="<%= customer.name %>"
            class="customer-image"
          />
          <div class="customer-details">
            <div class="customer-detail-value">
              <span class="customer-detail-title">Name:</span> <%= customer.name %>
            </div>
            <div class="customer-detail-value">
              <span class="customer-detail-title">Mobile:</span> <%= customer.mobile || "N/A" %>
            </div>
            <div class="customer-detail-value">
              <span class="customer-detail-title">Fees Paid:</span> ₹<%= customer.feesPaid %>
            </div>
            <div class="customer-detail-value">
              <span class="customer-detail-title">Remaining Fees:</span> ₹<%= 2300 - customer.feesPaid %>
            </div>
            <div class="customer-detail-value">
              <span class="customer-detail-title">Start Date:</span>
              <%= customer.start_date.toDate().toLocaleDateString("en-GB") %>
            </div>
            
          </div>
        </div>
      <% }); %>
    <% } else { %>
      <p class="text-center">No customers found.</p>
    <% } %>
  </div>
</div>
