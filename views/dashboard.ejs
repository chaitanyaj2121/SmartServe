<% layout("/layouts/boilerplate.ejs") %>

<style>
/* Ensure the modal dialog is vertically and horizontally centered */
.modal-dialog {
  display: flex;
  align-items: center;
  justify-content: center;
  min-height: 100vh; /* Full viewport height */
  margin: 0 auto; /* Center the modal horizontally */
}

/* Adjust modal content for responsiveness */
.modal-content {
  width: 100%;
  max-width: 500px; /* Limit the max width */
  border-radius: 8px;
  padding: 20px;
  box-shadow: 0 4px 8px rgba(0, 0, 0, 0.1); /* Subtle shadow for depth */
  background-color: #fff;
}

/* Fix for smaller screens */
@media (max-width: 768px) {
  .modal-content {
    width: 90%; /* Ensure it fits well on mobile devices */
  }
}

/* Optional: Add a smooth fade-in effect */
.modal.fade .modal-dialog {
  transition: transform 0.3s ease-in-out, opacity 0.3s ease-in-out;
  transform: translateY(-50px);
  opacity: 0;
}

.modal.show .modal-dialog {
  transform: translateY(0);
  opacity: 1;
}
.customer-container {
  display: flex;
  flex-wrap: wrap;
  gap: 1rem; /* Spacing between items */
  justify-content: space-between; /* Ensure consistent spacing */
}

.customer-card-wrapper {
  display: flex;
  flex-direction: column; /* Stack customer card and index */
  align-items: center; /* Center-align the content */
  width: 100%; /* Ensure consistent width */
}

.customer-card {
  width: 100%; /* Stretch the card within the wrapper */
}

.customer-index {
  text-align: center; /* Center align the index below the card */
  margin-top: 0.5rem; /* Add some space between card and index */
}


</style>
<div class="customer-list container mt-4">
  <h2 class="text-center mb-4">Customer List</h2>

  <% if (customers.length > 0) { %>
    <% customers.forEach((customer, index) => { %>
      <% 
        let formattedStartDate = "N/A"; // Default value
      if (customer.start_date && customer.start_date.toDate) {
        const startDate = new Date(customer.start_date.toDate()); // Convert Firestore Timestamp to JS Date
        formattedStartDate = startDate.toLocaleDateString("en-GB"); // Format as day/month/year
      }
      %>
        <div class="customer-card-wrapper">
          <div class="customer-card p-3 mb-3 rounded shadow-sm d-flex flex-wrap align-items-center" style="border: 1px solid #ddd;">
            <div class="customer-image me-3 mb-3" style="flex: 0 0 100px; height: 100px; overflow: hidden; border-radius: 50%;">
              <img 
                src="<%= customer.customerImage.url %>" 
                alt="Customer Image" 
                class="img-fluid w-100 h-100 object-fit-cover" 
                style="border-radius: 50%;"
              />
            </div>
      
            <div class="customer-details" style="flex: 1;">
              <span class="badge bg-success fs-5" style="margin:0.5rem 0.5rem 0 0;">
                #<%= index + 1 %>
              </span>
              <p class="mb-1">
                <span class="fw-bold me-2">
                  <i class="bi bi-person-circle"></i> Name:
                </span> 
                <%= customer.name %>
              </p>
              <p class="mb-1">
                <span class="fw-bold me-2">
                  <i class="bi bi-currency-rupee"></i> Fees Paid: 
                </span>₹<%= customer.feesPaid %>
              </p>
              <p class="mb-1">
                <span class="fw-bold me-2">
                  <i class="bi bi-currency-rupee"></i> Fees Remaining:
                </span> 
                ₹<%= messFees - customer.feesPaid %>
              </p>
              <p class="mb-1">
                <span class="fw-bold me-2">
                  <i class="bi bi-telephone-fill"></i> Mobile:
                </span> 
                <%= customer.mobile || "N/A" %>
              </p>
              <p class="mb-0">
                <span class="fw-bold me-2">
                  <i class="bi bi-calendar-date"></i> Starting Date:
                </span> 
                <%= formattedStartDate %>
              </p>
            
            </div>
            <span style="cursor: pointer; margin:0.5rem 0.5rem 0 0;" class="badge bg-primary fs-5" data-bs-toggle="modal" data-bs-target="#addCustomerModal-<%= customer.id %>">
              Manage
            </span>
               <!-- Delete Button -->
         <form action="/delete-customer" method="POST" class="mt-2">
          <input type="hidden" name="customerId" value="<%= customer.id %>">
          <button type="submit" class="btn btn-danger btn-sm">
            <i class="bi bi-trash"></i> Delete Customer
          </button>
        </form>

          <!-- Renew Customer Button -->
          <form action="/renew-customer" method="POST" style="margin-left:  0.5rem ;" class="mt-2">
            <input type="hidden" name="customerId" value="<%= customer.id %>">
            <button type="submit" class="btn btn-warning btn-sm">
              <i class="bi bi-arrow-clockwise"></i> Renew Customer
            </button>
          </form>
          </div>
         
          <div class="customer-index">
          
  

         
                  <!-- Modal for delete conformation-->
<div class="modal fade" id="deleteCustomerModal-<%= customer.id %>" tabindex="-1" aria-labelledby="deleteCustomerLabel" aria-hidden="true">
  <div class="modal-dialog">
    <div class="modal-content">
      <div class="modal-header">
        <h5 class="modal-title" id="deleteCustomerLabel">Confirm Deletion</h5>
        <button type="button" class="btn-close" data-bs-dismiss="modal" aria-label="Close"></button>
      </div>
      <div class="modal-body">
        Are you sure you want to delete <strong><%= customer.name %></strong>?
      </div>
      <div class="modal-footer">
        <button type="button" class="btn btn-secondary" data-bs-dismiss="modal">Cancel</button>
        <form action="/delete-customer" method="POST">
          <input type="hidden" name="customerId" value="<%= customer.id %>">
          <button type="submit" class="btn btn-danger">Delete</button>
        </form>
      </div>
    </div>
  </div>
</div>
          </div>
        </div>

      <div class="modal fade" id="addCustomerModal-<%= customer.id %>" tabindex="-1" aria-labelledby="addCustomerModalLabel-<%= customer.id %>" aria-hidden="true">
        <div class="modal-dialog">
          <div class="modal-content form-container">
            <div class="modal-header">
              <h5 class="modal-title" id="addCustomerModalLabel-<%= customer.id %>">Update Customer</h5>
              <button type="button" class="btn-close" data-bs-dismiss="modal" aria-label="Close"></button>
            </div>
            <form action="/customers/update/<%= customer.id %>" method="POST">
              <div class="modal-body">
                <div class="mb-3">
                  <label for="name-<%= customer.id %>" class="form-label">Customer Name</label>
                  <input type="text" class="form-control" value="<%= customer.name %>" id="name-<%= customer.id %>" name="name" required>
                </div>
                <div class="mb-3">
                  <label for="mobile-<%= customer.id %>" class="form-label">Mobile</label>
                  <input type="tel" class="form-control" value="<%= customer.mobile || "N/A" %>" id="mobile-<%= customer.id %>" name="mobile">
                </div>
                <div class="mb-3">
                  <label for="start_date-<%= customer.id %>" class="form-label">Starting Date</label>
                  <input type="text" class="form-control" readonly value="<%= formattedStartDate %>" id="start_date-<%= customer.id %>" name="start_date" required>
                </div>
                <div class="mb-3">
                  <label for="suttya-<%= customer.id %>" class="form-label">Suttya (Days to Extend)</label>
                  <input type="number" class="form-control" id="suttya-<%= customer.id %>" name="suttya" placeholder="Enter number of days">
                </div>
                <div class="mb-3">
                  <label for="feesPaid-<%= customer.id %>" class="form-label">Fees Paid</label>
                  <input type="number" class="form-control" value="<%= customer.feesPaid %>" id="feesPaid-<%= customer.id %>" name="feesPaid" required>
                </div>
              </div>
              <div class="modal-footer">
                <button type="submit" class="btn btn-primary">Update</button>
              </div>
            </form>
          </div>
        </div>
      </div>



    <% }) %>
  <% } else { %>
    <div class="no-customers text-center p-4 rounded bg-light">
      <i class="bi bi-people fs-1 text-muted"></i>
      <p class="mt-3 text-muted">No customers found.</p>
    </div>
  <% } %>
</div>
