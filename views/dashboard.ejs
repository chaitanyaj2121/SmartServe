<% layout("/layouts/boilerplate.ejs") %>

<style>
/* Ensure the modal dialog is vertically and horizontally centered */
.modal-dialog {
  display: flex;
  align-items: center;
  justify-content: center;
  min-height: 100vh; /* Full viewport height */
  margin: 0 auto; /* Center the modal horizontally */
}

/* Adjust modal content for responsiveness */
.modal-content {
  width: 100%;
  max-width: 500px; /* Limit the max width */
  border-radius: 8px;
  padding: 20px;
  box-shadow: 0 4px 8px rgba(0, 0, 0, 0.1); /* Subtle shadow for depth */
  background-color: #fff;
}

/* Fix for smaller screens */
@media (max-width: 768px) {
  .modal-content {
    width: 90%; /* Ensure it fits well on mobile devices */
  }
}

/* Optional: Add a smooth fade-in effect */
.modal.fade .modal-dialog {
  transition: transform 0.3s ease-in-out, opacity 0.3s ease-in-out;
  transform: translateY(-50px);
  opacity: 0;
}

.modal.show .modal-dialog {
  transform: translateY(0);
  opacity: 1;
}

</style>
<div class="customer-list container mt-4">
  <h2 class="text-center mb-4">Customer List</h2>

  <% if (customers.length > 0) { %>
    <% customers.forEach((customer, index) => { %>
    
      <% 
        const startDate = customer.start_date.toDate();
        const formattedStartDate = startDate.toLocaleDateString("en-GB"); // Format as day/month/year
        const currCusId = customer.id;
        const endDate = new Date(startDate.getTime() + 30 * 24 * 60 * 60 * 1000); // Add 30 days
        const formattedEndDate = endDate.toLocaleDateString("en-GB");

        const currentDate = new Date();
        const isEnded = currentDate > endDate; // Check if the mess has ended
        const remainingDays = Math.ceil((endDate.getTime() - currentDate.getTime()) / (24 * 60 * 60 * 1000));
        const daysLeftText = remainingDays > 0 
          ? `${remainingDays} days remaining` 
          : `Your mess ended on ${formattedEndDate}`;
      %>
      <div class="customer-card p-3 mb-3 rounded shadow-sm d-flex justify-content-between align-items-center" style="border: 1px solid #ddd;">
        <div class="customer-details">
          <p class="mb-1">
            <span class="fw-bold me-2">
              <i class="bi bi-person-circle"></i> Name:
            </span> 
            <%= customer.name %>
          </p>
          <p class="mb-1">
            <span class="fw-bold me-2">
              <i class="bi bi-person-circle"></i> Fees Paid:
            </span> 
            <%= customer.feesPaid %>
          </p>
          <p class="mb-1">
            <span class="fw-bold me-2">
              <i class="bi bi-person-circle"></i> Fees Remaining:
            </span> 
            <%= 2300 - customer.feesPaid %>
          </p>
          <p class="mb-1">
            <span class="fw-bold me-2">
              <i class="bi bi-telephone-fill"></i> Mobile:
            </span> 
            <%= customer.mobile || "N/A" %>
          </p>
          <p class="mb-0">
            <span class="fw-bold me-2">
              <i class="bi bi-calendar-date"></i> Starting Date:
            </span> 
            <%= formattedStartDate %>
          </p>
          <% if (!isEnded) { %>
            <p class="mt-1 text-success fw-bold">
              <i class="bi bi-clock"></i> <%= daysLeftText %>
            </p>
          <% } else { %>
            <p class="mt-1 text-danger fw-bold">
              <i class="bi bi-exclamation-triangle"></i> <%= daysLeftText %>
            </p>
          <% } %>
        </div>
        
        <div class="customer-index">
            <span style="cursor: pointer; margin-bottom: 1rem;" class="badge bg-primary fs-5" data-bs-toggle="modal" data-bs-target="#addCustomerModal-<%= customer.id %>">
             Manage
            </span>
          <span class="badge bg-primary fs-5">
            #<%= index + 1 %>
          </span>
        </div>
      </div>
      
      <!-- Modal with a unique ID -->
      <div class="modal fade" id="addCustomerModal-<%= customer.id %>" tabindex="-1" aria-labelledby="addCustomerModalLabel-<%= customer.id %>" aria-hidden="true">
        <div class="modal-dialog">
          <div class="modal-content form-container">
            <div class="modal-header">
              <h5 class="modal-title" id="addCustomerModalLabel-<%= customer.id %>">Update Customer</h5>
              <button type="button" class="btn-close" data-bs-dismiss="modal" aria-label="Close"></button>
            </div>
            <form action="/customers/update/<%= customer.id %>" method="POST">
              <div class="modal-body">
                <div class="mb-3">
                  <label for="name-<%= customer.id %>" class="form-label">Customer Name</label>
                  <input type="text" class="form-control" value="<%= customer.name %>" id="name-<%= customer.id %>" name="name" required>
                </div>
                <div class="mb-3">
                  <label for="mobile-<%= customer.id %>" class="form-label">Mobile</label>
                  <input type="tel" class="form-control" value="<%= customer.mobile || "N/A" %>" id="mobile-<%= customer.id %>" name="mobile">
                </div>
                <div class="mb-3">
                  <label for="start_date-<%= customer.id %>" class="form-label">Starting Date</label>
                  <input type="text" class="form-control" readonly value="<%= formattedStartDate %>" id="start_date-<%= customer.id %>" name="start_date" required>
                </div>
                <div class="mb-3">
                  <label for="suttya-<%= customer.id %>" class="form-label">Suttya (Days to Extend)</label>
                  <input type="number" class="form-control" id="suttya-<%= customer.id %>" name="suttya" placeholder="Enter number of days">
                </div>
                <div class="mb-3">
                  <label for="feesPaid-<%= customer.id %>" class="form-label">Fees Paid</label>
                  <input type="number" class="form-control" value="<%= customer.feesPaid %>" id="feesPaid-<%= customer.id %>" name="feesPaid" required>
                </div>
              </div>
              <div class="modal-footer">
                <button type="submit" class="btn btn-primary">Update</button>
              </div>
            </form>
          </div>
        </div>
      </div>
    <% }) %>
  <% } else { %>
    <div class="no-customers text-center p-4 rounded bg-light">
      <i class="bi bi-people fs-1 text-muted"></i>
      <p class="mt-3 text-muted">No customers found.</p>
    </div>
  <% } %>
</div>
