<% layout("/layouts/boilerplate.ejs") %>

    <style>
        .card {
            border-radius: 15px;
            /* Rounded corners */
            border: none;
        }

        h2 {
            font-weight: bold;
        }

        .form-label {
            font-weight: 500;
            color: #495057;
            /* Subtle dark gray for labels */
        }

        .form-control {
            border-radius: 10px;
            /* Rounded input fields */
        }

        button {
            border-radius: 10px;
            /* Rounded button */
            font-size: 16px;
            font-weight: bold;
        }

        button:hover {
            background-color: #007bff;
            color: white;
            transition: all 0.3s ease;
            /* Smooth hover effect */
        }
    </style>
    <div class="container mt-5">
        <div class="card shadow-lg p-4">
            <h2 class="text-center mb-4 text-primary"><i class="fas fa-utensils"></i> Register Your Mess</h2>
            <form id="businessSignupForm" action="/signup/business" method="POST">
                <!-- Business Name -->
                <div class="mb-3">
                    <label for="businessName" class="form-label"><i class="fas fa-building"></i> Business Name:</label>
                    <input type="text" id="businessName" name="businessName" class="form-control"
                        placeholder="Enter your mess name" required>
                </div>

                <!-- Business Owner Name -->
                <div class="mb-3">
                    <label for="ownerName" class="form-label"><i class="fas fa-user-tie"></i> Owner Name:</label>
                    <input type="text" id="ownerName" name="ownerName" class="form-control"
                        placeholder="Enter owner's full name" required>
                </div>

                <!-- Address -->
                <div class="mb-3">
                    <label for="address" class="form-label"><i class="fas fa-map-marker-alt"></i> Address:</label>
                    <textarea id="address" name="address" class="form-control" placeholder="Enter full address" rows="3"
                        required></textarea>
                </div>

                <!-- Phone Number -->
                <div class="mb-3">
                    <label for="phone" class="form-label"><i class="fas fa-phone"></i> Phone Number:</label>
                    <input type="tel" id="phone" name="phone" class="form-control" placeholder="Enter phone number"
                        pattern="[0-9]{10}" required>
                </div>

                <!-- Rent -->
                <div class="mb-3">
                    <label for="rent" class="form-label"><i class="fas fa-money-bill-wave"></i> Rent (â‚¹):</label>
                    <input type="number" id="rent" name="rent" class="form-control"
                        placeholder="Enter subscription cost per month" min="0" required>
                </div>

                <!-- Email -->
                <div class="mb-3">
                    <label for="email" class="form-label"><i class="fas fa-envelope"></i> Email Address:</label>
                    <input type="email" id="email" name="email" class="form-control" placeholder="Enter email address"
                        required>
                </div>

                <!-- Mess Description -->
                <div class="mb-3">
                    <label for="description" class="form-label"><i class="fas fa-info-circle"></i> Mess
                        Description:</label>
                    <textarea id="description" name="description" class="form-control"
                        placeholder="Short description of your mess" rows="3" required></textarea>
                </div>

                <!-- Upload Photo
                <div class="mb-3">
                    <label for="photo" class="form-label"><i class="fas fa-camera"></i> Upload Mess Photo:</label>
                    <input type="file" id="photo" name="photo" class="form-control" accept="image/*" required>
                </div> -->

                <!-- Password -->
                <div class="mb-3">
                    <label for="password" class="form-label"><i class="fas fa-lock"></i> Password:</label>
                    <input type="password" id="password" name="password" class="form-control"
                        placeholder="Enter a secure password" required>
                </div>

                <!-- Submit Button -->
                <div class="text-center">
                    <button type="submit" class="btn btn-primary w-100"><i class="fas fa-paper-plane"></i>
                        Register</button>
                </div>
            </form>
        </div>
    </div>