
<style>
  .navbar {
  background: linear-gradient(90deg, #4a90e2, #56ccf2);
  color: white;
}

.navbar a {
  color: white !important;
}

.navbar-toggler {
  border: none;
}

.navbar-toggler-icon {
  background-image: url("data:image/svg+xml;charset=UTF8,%3csvg xmlns='http://www.w3.org/2000/svg' viewBox='0 0 30 30'%3e%3cpath stroke='rgba%28255, 255, 255, 0.7%29' stroke-width='2' stroke-linecap='round' stroke-miterlimit='10' d='M4 7h22M4 15h22M4 23h22'/%3e%3c/svg%3e");
}
@media (max-width: 768px) {
  /* Navbar container */
  .navbar-nav {
    position: absolute;
    top: 100%; /* Position below the navbar */
    right: 0; /* Align to the right */
    background-color: rgba(46, 97, 155, 0.9); /* Slightly opaque background */
    padding: 0.5rem;
    border-radius: 10px; /* Rounded corners */
    width: auto; /* Width adjusts to the content */
    box-shadow: 0 4px 10px rgba(0, 0, 0, 0.1); /* Subtle shadow */
    display: none; /* Initially hidden */
    z-index: 1000;
  }

  .navbar-nav.show {
    display: block; /* Show the dropdown when toggled */
  }

  /* Navbar links */
  .navbar-nav .nav-link {
    font-size: 1rem;
    color: #ffffff;
    font-weight: 500;
    text-align: left;
    margin: 0.3rem 0;
    padding: 0.5rem 1rem;
    background-color: rgb(82, 188, 237); /* Match navbar color */
    border-radius: 8px; /* Rounded corners for links */
    transition: background-color 0.3s ease, transform 0.3s ease;
  }

  .navbar-nav .nav-link:hover {
    background-color: rgba(0, 0, 0, 0.15); /* Hover effect */
  }
  
  /* Toggle button styling */
  .navbar-toggler {
    margin-left: auto; /* Align to the right */
    border: none;
    outline: none;
  }

  .navbar-toggler-icon {
    background-image: url("data:image/svg+xml;charset=UTF8,%3csvg xmlns='http://www.w3.org/2000/svg' viewBox='0 0 30 30'%3e%3cpath stroke='rgba%28255, 255, 255, 0.7%29' stroke-width='2' stroke-linecap='round' stroke-miterlimit='10' d='M4 7h22M4 15h22M4 23h22'/%3e%3c/svg%3e");
  }
}



/* Dropdown Menu Styling */
.dropdown-menu {
  background-color: #4a90e2; /* Match the navbar background or choose a suitable color */
  border: none;
  border-radius: 8px; /* Rounded corners for a modern look */
  box-shadow: 0 4px 6px rgba(0, 0, 0, 0.1); /* Subtle shadow for depth */
}

.dropdown-menu .dropdown-item {
  color: white; /* White text for visibility */
  font-size: 1rem; /* Adjust font size */
  padding: 10px 15px; /* Add spacing for clickable areas */
  transition: background-color 0.3s ease; /* Smooth hover effect */
}

.dropdown-menu .dropdown-item:hover {
  background-color: #56ccf2; /* Slightly lighter color on hover */
  color: white; /* Keep text color consistent */
}

/* Adjust for small screens */
@media (max-width: 768px) {
  .dropdown-menu {
    width: 100%; /* Make the dropdown fill the screen width */
    margin-top: 0.5rem;
    left: 0;
    right: 0;
  }
}

</style>
<script>
document.addEventListener('DOMContentLoaded', () => {
  const toggler = document.querySelector('.navbar-toggler');
  const navMenu = document.querySelector('.navbar-nav');

  toggler.addEventListener('click', () => {
    navMenu.classList.toggle('show');
  });
});
</script>


<nav class="navbar navbar-expand-md bg-light sticky-top shadow-sm">
  <div class="container-fluid">
    <!-- Logo and Title -->
    <a class="navbar-brand d-flex align-items-center" href="/" style="font-size: 1.2rem; font-weight: bold; color: #4a90e2;">
      <i class="fa-solid fa-globe me-2" style="font-size: 1.5rem;"></i> SmartServe
    </a>

    <!-- Toggle Button for Mobile View -->
    <button class="navbar-toggler" type="button" data-bs-toggle="collapse" data-bs-target="#navbarNavAltMarkup"
      aria-controls="navbarNavAltMarkup" aria-expanded="false" aria-label="Toggle navigation">
      <span class="navbar-toggler-icon"></span>
    </button>

    <!-- Navbar Links -->
    <div class="collapse navbar-collapse" id="navbarNavAltMarkup">
      <div class="navbar-nav">
        <a class="nav-link" href="/" style="font-size: 1rem; color: #333;">
          <i class="fa-solid fa-house"></i> Home
        </a>
        <% if (ismess) { %>
          <a class="nav-link" href="/dashboard" style="font-size: 1rem; color: #333;">
            <i class="fa-solid fa-chart-line"></i> Dashboard
          </a>
          <a class="nav-link" href="/customers" style="font-size: 1rem; color: #333;">
            <i class="fa-solid fa-users"></i> Manage Customers
          </a>
          <a class="nav-link" href="/notifications" style="font-size: 1rem; color: #333;">
            <i class="fa-solid fa-bell"></i> Notifications
          </a>
        <% } %>
        <% if (iscustomer) { %>
          <a class="nav-link" href="/nearby" style="font-size: 1rem; color: #333;">
            <i class="fa-solid fa-location-dot"></i> Nearby SmartServe
          </a>
        <% } %>
      </div>

      <!-- Right-Side Navigation -->
      <div class="navbar-nav ms-auto">
        <% if (!currUser) { %>
          <div class="nav-item dropdown">
            <a class="nav-link dropdown-toggle" href="#" id="signupDropdown" role="button"
              data-bs-toggle="dropdown" aria-expanded="false" style="font-size: 1rem; color: #333;">
              <i class="fa-solid fa-user-plus"></i> Sign Up
            </a>
            <ul class="dropdown-menu" aria-labelledby="signupDropdown">
              <li>
                <a class="dropdown-item" href="/signup/user">
                  <i class="fa-solid fa-user"></i> as User
                </a>
              </li>
              <li>
                <a class="dropdown-item" href="/signup/business">
                  <i class="fa-solid fa-briefcase"></i> as Business
                </a>
              </li>
            </ul>
          </div>
          <a class="nav-link" href="/login" style="font-size: 1rem; color: #333;">
            <i class="fa-solid fa-right-to-bracket"></i> Log in
          </a>
        <% } else { %>
          <a class="nav-link" href="/profile" style="font-size: 1rem; color: #333;">
            <i class="fa-solid fa-user"></i> Profile
          </a>
          <a class="nav-link" href="/logout" style="font-size: 1rem; color: #333;">
            <i class="fa-solid fa-right-from-bracket"></i> Log out
          </a>
        <% } %>
      </div>
    </div>
  </div>
</nav>
