<!-- Success Alert -->
<% if (success.length) { %>
    <div class="alert alert-success alert-dismissible fade show col-6 offset-3 shadow-sm" role="alert">
      <i class="fa-solid fa-circle-check"></i> 
      <span class="ms-2"><%= success %></span>
      <button type="button" class="btn-close" data-bs-dismiss="alert" aria-label="Close"></button>
    </div> 
  <% } %> 
  
  <!-- Error Alert -->
  <% if (error.length) { %>
    <div class="alert alert-danger alert-dismissible fade show col-6 offset-3 shadow-sm" role="alert">
      <i class="fa-solid fa-triangle-exclamation"></i> 
      <span class="ms-2"><%= error %></span>
      <button type="button" class="btn-close" data-bs-dismiss="alert" aria-label="Close"></button>
    </div> 
  <% } %> 
  